{
  "name": "quiz-app",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:analyze": "ANALYZE=true next build",
    "start": "next start",
    "lint": "next lint",
    "knip": "knip",
    "depcheck": "depcheck",
    "bundle-analyzer": "npx @next/bundle-analyzer",
    "performance:test": "npm run build && npm run start & sleep 5 && npx lighthouse http://localhost:3000 --output=json --output-path=./performance-report.json"
  },
  "knip": {
    "entry": [
      "src/app/**/*.{ts,tsx}",
      "src/components/**/*.{ts,tsx}",
      "next.config.ts",
      "src/middleware.ts"
    ],
    "project": [
      "src/**/*.{ts,tsx}",
      "*.{js,ts,mjs}"
    ],
    "ignore": [
      "src/types/module-declarations.d.ts"
    ],
    "ignoreDependencies": [
      "postcss",
      "eslint-config-next"
    ]
  },
  "dependencies": {
    "@mui/icons-material": "^7.1.1",
    "@mui/material": "^7.1.1",
    "@nextui-org/react": "^2.6.11",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@tanstack/react-query": "^5.74.4",
    "axios": "^1.8.4",
    "chart.js": "^4.4.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "firebase": "^11.4.0",
    "framer-motion": "^12.16.0",
    "i18next": "^23.8.2",
    "i18next-browser-languagedetector": "^7.2.0",
    "immer": "^10.1.1",
    "lucide-react": "^0.503.0",
    "next": "^15.2.1",
    "next-themes": "^0.4.6",
    "react": "^19.1.0",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^19.1.0",
    "react-hot-toast": "^2.5.2",
    "react-i18next": "^14.1.0",
    "react-icons": "^5.5.0",
    "react-router-dom": "^6.30.1",
    "tailwind-merge": "^3.2.0",
    "tslib": "^2.8.1",
    "web-vitals": "^5.0.0",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "depcheck": "^1.4.7",
    "eslint": "^9",
    "eslint-config-next": "15.2.1",
    "eslint-config-prettier": "^10.1.2",
    "jscpd": "^4.0.5",
    "knip": "^5.60.2",
    "tailwindcss": "^4",
    "typescript": "^5"
  },
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@common/*": [
        "common/*"
      ],
      "@users/*": [
        "users/*"
      ],
      "@courses/*": [
        "courses/*"
      ],
      "@documents/*": [
        "documents/*"
      ],
      "@quizzes/*": [
        "quizzes/*"
      ],
      "@ai/*": [
        "ai/*"
      ],
      "@firebase/*": [
        "firebase/*"
      ],
      "@learningTargets/*": [
        "learningTargets/*"
      ],
      "@types/*": [
        "types/*"
      ],
      "@hooks/*": [
        "hooks/*"
      ],
      "@contexts/*": [
        "contexts/*"
      ],
      "@services/*": [
        "services/*"
      ],
      "@components/*": [
        "components/*"
      ]
    }
  }
}
